{% extends 'base.html.twig' %}

{% block title %}Vérification de la salle
{% endblock %}

{% block body %}
	<div class="container">
		<div>
			<div class="mb-5">
				<h1>Historiques des demandes de type Matériel/logiciel</h1>
			</div>

			<p>Veuillez choisir la salle :</p>


			{{ form_start(formView) }}

			<div class="row">
				<div class="col-md-6 pb-5">
					<form>
						<div class="mb-3">
							{{form_widget(formView)}}
						</div>
						<button type="submit" class="btn btn-primary">Verifier</button>
					</form>
				</div>
			</div>

			{{ form_end(formView) }}


			{% if historiqueDemandes is not empty %}
				<h2>Historiques des demandes de la salle
					{{selectSalle.name}}</h2>

				<table class="table table-hover">
					<thead>
						<tr>
							<th scope="col">Description</th>
						</tr>
					</thead>
					<tbody>
						{% for d in historiqueDemandes %}
							<tr class="table-active">
								<td>{{ d.description }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% else %}
				<p>Aucune demande trouvée</p>
			{% endif %}


			<p>
				<a href="{{path('app_account')}}">Retour sur votre compte</a>
				ou
				<a href="{{path('app_account_demande_materiel')}}">Créer votre demande</a>
			</p>


		</div>
	</div>
{% endblock %}
